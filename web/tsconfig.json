{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // üîΩ –ì–û–õ–û–í–ù–ï: alias '@/*' –¥–ª—è —ñ–º–ø–æ—Ä—Ç—ñ–≤ —Ç–∏–ø—É '@/lib/kv'
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    // (–Ω–µ –æ–±–æ–≤'—è–∑–∫–æ–≤–æ, –∞–ª–µ –∫–æ—Ä–∏—Å–Ω–æ –¥–ª—è Next 14)
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
